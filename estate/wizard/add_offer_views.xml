<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="property_offer_wizard_form" model="ir.ui.view">
        <field name="name">property.offer.wizard.form</field>
        <field name="model">property.offer.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="price" />
                    <field name="partner" />
                    <field name="status" />
                </group>

                <footer> 
                    <button name="action_make_offer" type="object" string = "Make Offer"></button>
                    <button special="cancel" string = "Cancel"></button>
                </footer>

            </form>
        </field>
    </record>

    <record id= "action_offer_wizard" model = "ir.actions.act_window">
        <field name="name">Make Offer</field>
        <field name="res_model">property.offer.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_estate_property_myproperty"/>



    </record>

</odoo>